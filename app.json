{
    "expo": {
        "name": "concept-promotions",
        "slug": "concept-promotions",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/supreme.jpg",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/supreme.jpg",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "plugins": [
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow Concept Promotions to use your location to geotag photos in reports."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Allow Concept Promotions to access your photos.",
                    "cameraPermission": "Allow Concept Promotions to access your camera to take geotagged photos for reports."
                }
            ]
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "in.conceptpromotions.app",
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "This app needs access to your location to geotag photos in reports.",
                "NSCameraUsageDescription": "This app needs access to your camera to take geotagged photos for reports.",
                "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload images."
            }
        },
        "android": {
            "package": "in.conceptpromotions.app",
            "adaptiveIcon": {
                "foregroundImage": "./assets/supreme.jpg",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "permissions": [
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION",
                "android.permission.CAMERA",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE",
                "android.permission.RECORD_AUDIO",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION",
                "android.permission.CAMERA",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE",
                "android.permission.RECORD_AUDIO"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "owner": "developer_conceptp",
        "extra": {
            "eas": {
                "projectId": "3082a1d9-50ae-4254-a1fa-fd91a1e018f8"
            }
        },
        "runtimeVersion": {
            "policy": "appVersion"
        },
        "updates": {
            "url": "https://u.expo.dev/3082a1d9-50ae-4254-a1fa-fd91a1e018f8"
        }
    }
}
